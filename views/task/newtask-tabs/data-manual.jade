ul.nav.nav-tabs
  li.active: a(href='#schema',data-toggle='tab') Schema
  li: a(href='#objects',data-toggle='tab') Objects

.tab-content
  #schema.tab-pane.active
    .row
      .col-md-6
        h3 Add field
        .form-group
          label(for='field-name') Field name
          input#field-name.form-control.input-small(type='text', placeholder='Field name', required)
        .form-group
          label(for='field-type') Field type
          .input-group
            select.form-control.input-small#field-type
              each type in fieldTypes
                option= type
            .input-group-btn
              button#addField.btn.btn-small.btn-success(type='button') Add 
                i.icon-plus
      .col-md-6
        h3 Field list
        ul#field-list.list-group

  #objects.tab-pane
    h3 Objects data
    table#data.table.table-striped.table-bordered.table-hover.table-condensed
      thead
        tr#data-header-list
          th(style='width: 70px') Action
      tbody#objects-list
      tfoot#data-input
        tr.param-list
          td
            button#btnAddObject.btn.btn-small.btn-success Add 
              i.icon-plus